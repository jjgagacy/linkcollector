let mapleader=","
set nocompatible
set autoindent
set smartindent
set showmatch
set ignorecase
set incsearch
set tabstop=4
set shiftwidth=4
set expandtab
set nobackup
set noswapfile
set history=1024
set autochdir
set ruler
set fileencodings=utf-8
set tenc=utf-8
set hlsearch
set guifont="DejaVu Sans Mono Book":h12:cANSI
set guioptions-=m
set guioptions-=T
colorscheme desert

syntax on
syntax enable
